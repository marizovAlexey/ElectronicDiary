<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="School.Client.Views.SubjectWindow"
		xmlns:vm="using:School.Client.ViewModels"
        Title="Редактирование предмета"
		SizeToContent="Height"
		MaxWidth="1000">
	<Design.DataContext>
		<vm:SubjectViewModel/>
	</Design.DataContext>

	<Window.Styles>
		<StyleInclude Source="/SchoolStyles.axaml"/>
	</Window.Styles>

	<Grid Classes="MainGrid" RowDefinitions="Auto, Auto, *" ColumnDefinitions="Auto, *">
		<Label Grid.Row="0" Grid.Column="0">Название</Label>
		<Label Grid.Row="0" Grid.Column="1">Год преподавания</Label>

		<TextBox Grid.Row="1" Grid.Column="0" Text="{Binding Name}"/>
		<TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Year}"/>

		<StackPanel Grid.Row="2" Orientation="Horizontal">
			<Button IsDefault="True" Command="{Binding OnSubmitCommand}">OK</Button>
			<Button IsCancel="True" Click="CancelButton_OnClick">Отмена</Button>
		</StackPanel>
	</Grid>


</Window>